{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "./base.json",
	"compilerOptions": {
		"jsx": "react-jsx",
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"types": ["node", "vite/client"],
		"module": "ES2022",
		"moduleResolution": "bundler",
		"moduleDetection": "auto",
		"declaration": false,
		"declarationMap": false,
		"incremental": false
	}
}
